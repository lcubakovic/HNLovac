<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:scrollbars="horizontal"
    >

    <TableRow android:background="@color/white" android:padding="5dp"
        android:scrollbars="horizontal"
        >

        <LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P"
            android:textSize="18sp"
            android:id="@+id/position"
            android:textStyle="bold"
            />
        </LinearLayout>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/club_logo"
            android:layout_marginStart="5dp"
            />
        <LinearLayout>
            <TextView
                android:id="@+id/club_name"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/gnk_dinamo_zagreb"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_played"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"

            />
    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_victory"
            android:layout_gravity="center"
            android:textAlignment="center"

            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_drawn"
            android:layout_gravity="center"
            android:textAlignment="center"

            android:textSize="16sp"

            />
    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_loss"
            android:layout_gravity="center"
            android:textAlignment="center"

            android:textSize="16sp"

            />
    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:id="@+id/points"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            />
    </LinearLayout>
    </TableRow>
    </TableLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ss"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="inherit"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp"
    >
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:scrollbars="horizontal"
    >

    <TableRow android:background="@color/white" android:padding="5dp"
        android:scrollbars="horizontal"
        >

        <LinearLayout>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="P"
            android:textSize="18sp"
            android:id="@+id/position"
            android:textStyle="bold"
            android:textAlignment="center"
            />
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/club_logo"
            android:layout_marginStart="5dp"
            />
        <LinearLayout>
            <TextView
                android:id="@+id/club_name"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/gnk_dinamo_zagreb"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="2dp"
                />
        </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_played"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginEnd="28dp"

            />
    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_victory"
            android:textAlignment="center"
            android:layout_marginEnd="28dp"
            android:textSize="18sp"
            />
    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_drawn"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginEnd="28dp"
            />
    </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:id="@+id/games_loss"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginEnd="28dp"

            />
    </LinearLayout>
        <LinearLayout>
            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:id="@+id/goal_difference"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginEnd="28dp"

                />
        </LinearLayout>
    <LinearLayout>
        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="0.1"
            android:id="@+id/points"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="18sp"

            />
    </LinearLayout>

    </TableRow>
    </TableLayout>
</androidx.cardview.widget.CardView>